<% include ./partials/header.ejs
            console.log(user)
 %>

<div class="container w-full min-h-screen bg-zinc-800 mx-auto text-white pt-1">
    <form action="/fileupload" id="uploadform" hidden method="post" enctype="multipart/form-data">
        <input type="file" name="image" id="">
    </form>
    <div class="profdets flex flex-col items-center mt-20">
        <div class="relative">
            <span class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 " id="uploadicon">
                <i class="text-zinc-800 ri-pencil-line"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage  %>" alt="">
            </div>
        </div>
      
        <h1 class="text-3xl font-semibold mt-5"><%= user.name  %></h1>
        <h3 class="text-md">@<%= user.username %></h3>
        <a href="/edit" class="mt-5 px-7 py-3 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
        <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-7">Add new post</a>
    </div>
    <% 
        if (user.posts.length > 0) {
    %>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-100 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.posts[0].image %>" alt="image">
            </div>
            <a href="/show/posts" class="text-xl font-semibold mt-3">All pins</a>
            <h5 class="text-sm font-medium opacity-60">28 pins</h5>
        </div>
        <div class="card">
            <div class="w-52 h-40 bg-zinc-100 rounded-lg"></div>
            <h3 class="text-xl font-semibold mt-3">All pins</h3>
            <h5 class="text-sm font-medium opacity-60">28 pins</h5>
        </div>
    </div>
    <% }    %>
</div>
<script>
    document.querySelector("#uploadicon").addEventListener("click",()=>{
        document.querySelector('#uploadform input').click();
    })
    document.querySelector('#uploadform input').addEventListener('change',()=>{
        document.querySelector('#uploadform').submit();
    })
</script>
<% include ./partials/footer.ejs %>

